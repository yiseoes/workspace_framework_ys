<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserMapper08">

  <sql id="select-users">
    SELECT USER_ID, USER_NAME, PASSWORD, AGE, GRADE, REG_DATE
  </sql>
  <sql id="orderby-userid-desc">
    ORDER BY USER_ID DESC
  </sql>


  <resultMap id="userSelectMap" type="user">
    <result property="userId"   column="USER_ID" />
    <result property="userName" column="USER_NAME" />
    <result property="password" column="PASSWORD" />
    <result property="age"      column="AGE" />
    <result property="grade"    column="GRADE" />
    <result property="regDate"  column="REG_DATE" />
  </resultMap>
  
  
  <select id="getUserList01" parameterType="user" resultMap="userSelectMap">
    <include refid="select-users"/>
    FROM USERS
    <where>
      <if test="userName != null"> user_name = #{userName} </if>
      <if test="age != null"> AND age = #{age} </if>
    </where>
    <include refid="orderby-userid-desc"/>
  </select>

  
  <insert id="addUser" parameterType="user">
    INSERT INTO USERS ( user_id, user_name, password
    <if test="age != null">, age</if>
    <if test="grade != 0">, grade</if>
    , reg_date )
    VALUES ( #{userId}, #{userName}, #{password}
    <if test="age != null">, #{age}</if>
    <if test="grade != 0">, #{grade}</if>
    , SYSDATE )
  </insert>
  

  <select id="getUserList02" parameterType="user" resultMap="userSelectMap">
    <include refid="select-users"/>
    FROM USERS
    <where>
      <choose>
        <when test="userId != null"> user_id = #{userId} </when>
        <when test="userName != null"> user_name = #{userName} </when>
        <when test="password != null"> password = #{password} </when>
        <otherwise> grade = #{grade} </otherwise>
      </choose>
    </where>
  </select>
  

  <update id="updateUser01" parameterType="user">
    UPDATE USERS
    <set>
      <if test="password != null"> password = #{password}, </if>
      <if test="age != null"> age = #{age}, </if>
      <if test="grade != 0"> grade = #{grade}, </if>
    </set>
    WHERE user_id = #{userId}
  </update>
  

  <update id="updateUser02" parameterType="user">
      UPDATE USERS
      <trim prefix="SET" suffixOverrides=",">
        <if test="password != null"> password = #{password}, </if>
        <if test="age != null"> age = #{age}, </if>
        <if test="grade != 0"> grade = #{grade}, </if>
      </trim>
      WHERE user_id = #{userId}
  </update>


  <delete id="removeUser" parameterType="string">
    DELETE FROM USERS WHERE USER_ID = #{value}
  </delete>

</mapper>